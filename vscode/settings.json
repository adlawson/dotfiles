{
    "editor.fontSize": 14,
    "editor.minimap.enabled": false,
    "editor.rulers": [ 80, 120 ],
    "files.associations": { "Dockerfile-*" : "dockerfile" },
    "go.toolsManagement.autoUpdate": false,
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.fontFamily": "Menlo for Powerline, Menlo",
    "terminal.integrated.fontSize": 14,
    "vim.leader": ",",
    "vim.insertModeKeyBindings": [
        { "before" : ["<c-j>"], "commands" : ["cursorDown"], "when" : "textInputFocus", "silent" : true },
        { "before" : ["<c-k>"], "commands" : ["cursorUp"], "when" : "textInputFocus", "silent" : true }
    ],
    "vim.normalModeKeyBindings": [
        { "before" : [";"], "after" : [":"] },
        { "before" : ["g", "r"], "commands" : ["editor.action.goToReferences"], "when" : "editorHasReferenceProvider && editorTextFocus && !inReferenceSearchEditor && !isInEmbeddedEditor", "silent" : "true" },
        { "before" : ["<c-j>"], "commands" : ["editor.action.moveLinesDownAction"], "silent" : true },
        { "before" : ["<c-k>"], "commands" : ["editor.action.moveLinesUpAction"], "silent" : true },
        { "before" : ["<leader>", "w", "w"], "commands" : ["workbench.action.splitEditorRight"], "silent" : true }
    ],
    "vim.visualModeKeyBindings": [
        { "before" : ["<c-j>"], "commands" : ["editor.action.moveLinesDownAction"], "silent" : true },
        { "before" : ["<c-k>"], "commands" : ["editor.action.moveLinesUpAction"], "silent" : true }
    ],
    "vim.useSystemClipboard": true,
    "window.titleBarStyle": "native",
    "workbench.activityBar.visible": false,
    "workbench.colorTheme": "Sonokai Maia",
    "workbench.layoutControl.enabled": false,
    "workbench.editor.limit.enabled": true,
    "workbench.editor.showTabs": false
}
